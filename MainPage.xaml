<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NicolasCasamenExamenAPI.MainPage">

    <ContentPage.Content>
        <StackLayout Padding="10">
            <Entry x:Name="pokemonEntry" Placeholder="Enter Pokémon name"/>
            <Button Text="Search" Clicked="OnSearchButtonClicked"/>

            <Label x:Name="nameLabel" Text="Name:" FontSize="20"/>
            <Label x:Name="heightLabel" Text="Height:" FontSize="20"/>
            <Label x:Name="weightLabel" Text="Weight:" FontSize="20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
